<ivysettings>
	<settings defaultResolver="default" />
	<!-- <settings defaultResolveMode="dynamic" /> -->
	<resolvers>
		<url name="mvnrepos" m2compatible="true">  <!-- IBIBLIO-Mirror -->
			<artifact pattern="http://mirrors.ibiblio.org/pub/mirrors/maven2/[organisation]/[module]/[branch]/[revision]/[branch]-[revision].[ext]" />
			<artifact pattern="http://mirrors.ibiblio.org/pub/mirrors/maven2/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
		</url>

		<ibiblio name="ibiblio" m2compatible="true" />

		<url name="com.springsource.repository.bundles.release">
			<ivy pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			<artifact pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
		</url>
		<url name="com.springsource.repository.bundles.external">
			<ivy pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			<artifact pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
		</url>
		<chain name="spring">
			<resolver ref="com.springsource.repository.bundles.release" />
			<resolver ref="com.springsource.repository.bundles.external" />
		</chain>

		<ibiblio name="jboss-mvn" root="http://repository.jboss.org/maven2/" m2compatible="true" />
		<ibiblio name="jboss" root="https://repository.jboss.org/nexus/content/groups/public-jboss" m2compatible="true" />

		<ibiblio name="java-net-maven1" root="http://download.java.net/maven/1" pattern="[organisation]/[type]s/[module]-[revision].[ext]"
			m2compatible="false" />
		<ibiblio name="java-net-maven2" root="http://download.java.net/maven/2/" m2compatible="true" />

		<ibiblio name="jansi" m2compatible="true" root="http://jansi.fusesource.org/repo/release/" />

		<filesystem name="local" checkmodified="true">
	    	<ivy pattern="${basedir}/../repo/[module](-[branch])/[revision]/[artifact](-[branch])-[revision].[ext]" />
		    <artifact pattern="${basedir}/../[module]/[revision]/[artifact](-[branch])-[revision].[ext]" />
	    </filesystem>
    
		<chain name="default" returnFirst="true">
			<resolver ref="local" />
			<resolver ref="ibiblio" />
			<resolver ref="mvnrepos" />
			<resolver ref="spring" />
		</chain>
	</resolvers>
</ivysettings>

